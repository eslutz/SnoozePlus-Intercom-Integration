{
  "name": "snoozeplus-intercom-integration",
  "version": "0.0.2",
  "description": "Inbox integration for Intercom to automate delayed responses to customers.",
  "homepage": "https://github.com/eslutz/SnoozePlus-Intercom-Integration#readme",
  "license": "",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration.git"
  },
  "bugs": {
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration/issues",
    "email": "eric@ericslutz.dev"
  },
  "author": {
    "name": "Eric Slutz",
    "email": "eric@ericslutz.dev",
    "url": "https://www.ericslutz.dev"
  },
  "keywords": [
    "intercom",
    "inbox",
    "integration",
    "snooze",
    "snooze+",
    "snooze-plus"
  ],
  "main": "app.js",
  "scripts": {
    "start": "node --env-file=.env dist/app.js",
    "dev": "tsx --env-file=.env.local --watch src/app.ts",
    "build": "npm run clean && tsc && eslint ./src && npm run copy-files",
    "clean": "rimraf dist coverage",
    "copy-files": "cp package.json dist/package.json && cp -rp scripts/ dist/",
    "lint": "prettier ./src --write && eslint ./src --fix",
    "test": "node --env-file=.env.test ./node_modules/.bin/jest --passWithNoTests --detectOpenHandles",
    "test:watch": "node --env-file=.env.test ./node_modules/.bin/jest --watch --detectOpenHandles",
    "test:coverage": "node --env-file=.env.test ./node_modules/.bin/jest --coverage --detectOpenHandles",
    "prod-build": "npm run lint && npm test -- --coverage && npm run build && cp .env.production dist/.env"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@logtail/node": "^0.5.5",
    "@logtail/winston": "^0.5.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/dompurify": "^3.0.5",
    "compression": "^1.8.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "inversify": "^7.5.4",
    "isomorphic-dompurify": "^2.25.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "passport": "^0.7.0",
    "passport-intercom": "^0.0.4",
    "pg": "^8.16.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "retry": "^0.13.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^30.0.3",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/inversify": "^2.0.32",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.4",
    "@types/node-fetch": "^2.6.12",
    "@types/node-schedule": "^2.1.7",
    "@types/passport": "^1.0.17",
    "@types/pg": "^8.15.4",
    "@types/retry": "^0.12.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "prettier": "^3.6.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  }
}
