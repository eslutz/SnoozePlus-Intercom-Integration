{
  "name": "snoozeplus-intercom-integration",
  "version": "0.0.2",
  "description": "Inbox integration for Intercom to automate delayed responses to customers.",
  "homepage": "https://github.com/eslutz/SnoozePlus-Intercom-Integration#readme",
  "license": "",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration.git"
  },
  "bugs": {
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration/issues",
    "email": "eric@ericslutz.dev"
  },
  "author": {
    "name": "Eric Slutz",
    "email": "eric@ericslutz.dev",
    "url": "https://www.ericslutz.dev"
  },
  "keywords": [
    "intercom",
    "inbox",
    "integration",
    "snooze",
    "snooze+",
    "snooze-plus"
  ],
  "main": "app.js",
  "scripts": {
    "start": "node --env-file=.env dist/app.js",
    "dev": "tsx --env-file=.env.local --watch src/app.ts",
    "build": "npm run clean && npm run type-check && tsc && npm run copy-files",
    "clean": "npx rimraf dist coverage",
    "type-check": "tsc --noEmit",
    "dev-build": "npm run build && cp .env.dev dist/.env",
    "prod-build": "npm outdated && npm run lint && npm run test && npm run build && cp .env.production dist/.env",
    "copy-files": "cp package.json dist/package.json && cp -rp scripts/ dist/",
    "lint": "prettier ./src --write && eslint ./src --fix",
    "lint:check": "prettier ./src --check && eslint ./src",
    "test": "node --env-file=.env.test ./node_modules/.bin/jest --passWithNoTests",
    "test:watch": "node --env-file=.env.test ./node_modules/.bin/jest --watch",
    "test:coverage": "node --env-file=.env.test ./node_modules/.bin/jest --coverage",
    "test:ci": "node --env-file=.env.test ./node_modules/.bin/jest --coverage --passWithNoTests --ci",
    "docker:build": "docker build -t snoozeplus-intercom .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production snoozeplus-intercom",
    "security:audit": "npm audit && npm run security:check-deps",
    "security:check-deps": "npx better-npm-audit audit"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@logtail/node": "^0.5.2",
    "@logtail/winston": "^0.5.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "passport": "^0.7.0",
    "passport-intercom": "^0.0.4",
    "pg": "^8.13.0",
    "retry": "^0.13.1",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^29.7.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.3",
    "@types/node-fetch": "^2.6.11",
    "@types/node-schedule": "^2.1.7",
    "@types/passport": "^1.0.17",
    "@types/pg": "^8.11.10",
    "@types/retry": "^0.12.5",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  }
}
