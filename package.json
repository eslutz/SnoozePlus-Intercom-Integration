{
  "name": "snoozeplus-intercom-integration",
  "version": "1.0.0",
  "description": "Inbox integration for Intercom to automate delayed responses to customers.",
  "homepage": "https://github.com/eslutz/SnoozePlus-Intercom-Integration#readme",
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration.git"
  },
  "bugs": {
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration/issues",
    "email": "eric@ericslutz.dev"
  },
  "author": {
    "name": "Eric Slutz",
    "email": "eric@ericslutz.dev",
    "url": "https://www.ericslutz.dev"
  },
  "keywords": [
    "intercom",
    "inbox",
    "integration",
    "snooze",
    "snooze+",
    "snooze-plus"
  ],
  "main": "app.js",
  "scripts": {
    "dev": "tsx --env-file=.env.local --watch src/app.ts",
    "dev-build": "tsc --noEmit",
    "build": "npm outdated && tsc && npm run copy-files",
    "start": "node --env-file=.env app.js",
    "lint": "prettier ./src --write && eslint ./src --fix",
    "copy-files": "cp README.md dist/README.md && cp package.json dist/package.json && cp .env.production dist/.env && cp -rp scripts/ dist/"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "express": "^4.21.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "pg": "^8.13.0",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.6",
    "@types/node-fetch": "^2.6.11",
    "@types/node-schedule": "^2.1.7",
    "@types/pg": "^8.11.10",
    "@types/winston": "^2.4.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  }
}
