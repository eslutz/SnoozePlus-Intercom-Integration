{
  "name": "snoozeplus-intercom-integration",
  "version": "1.0.0",
  "description": "Inbox integration for Intercom to automate delayed responses to customers.",
  "homepage": "https://github.com/eslutz/SnoozePlus-Intercom-Integration#readme",
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration.git"
  },
  "bugs": {
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration/issues",
    "email": "eric@ericslutz.dev"
  },
  "author": {
    "name": "Eric Slutz",
    "email": "eric@ericslutz.dev",
    "url": "https://www.ericslutz.dev"
  },
  "keywords": [
    "intercom",
    "inbox",
    "integration",
    "snooze",
    "snooze+",
    "snooze-plus"
  ],
  "main": "app.js",
  "scripts": {
    "dev": "npm run lint && nodemon src/app.js",
    "format": "prettier ./src --write",
    "lint": "eslint ./src --fix",
    "copy-app": "cp -r src/ dist/SnoozePlus/ && cp package.json dist/SnoozePlus/package.json",
    "copy-extras": "cp README.md dist/README.md && cp -r scripts/ dist/",
    "build": "npm run format && npm run lint && npm run copy-app && npm run copy-extras",
    "start": "npm install --production && node app.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "express": "^5.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  }
}
