{
  "name": "snoozeplus-intercom-integration",
  "version": "1.0.0",
  "description": "Inbox integration for Intercom to automate delayed responses to customers.",
  "homepage": "https://github.com/eslutz/SnoozePlus-Intercom-Integration#readme",
  "license": "",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration.git"
  },
  "bugs": {
    "url": "https://github.com/eslutz/SnoozePlus-Intercom-Integration/issues",
    "email": "eric@ericslutz.dev"
  },
  "author": {
    "name": "Eric Slutz",
    "email": "eric@ericslutz.dev",
    "url": "https://www.ericslutz.dev"
  },
  "keywords": [
    "intercom",
    "inbox",
    "integration",
    "snooze",
    "snooze+",
    "snooze-plus"
  ],
  "main": "app.js",
  "scripts": {
    "start:dev": "node src/app.js",
    "minify": "minify src/app.js > dist/SnoozePlus/app.js && npm run minify-services",
    "minify-services": "minify src/services/canvas-service.js > dist/SnoozePlus/services/canvas-service.js",
    "copy-files": "cp README.md dist/README.md && cp -r scripts/ dist/ && cp package.json dist/SnoozePlus/package.json",
    "build": "npm run minify && npm run copy-files",
    "start": "npm install && node app.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@types/node": "^22.5.0",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "express-winston": "^4.2.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "minify": "^11.4.0"
  }
}
